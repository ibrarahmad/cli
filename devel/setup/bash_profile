# PGEDGE CLI for ~/.bash... #############################################
alias bp="cd ~/dev/cli; source bp.sh"
alias bap="cd ~/dev/cli; ./build_all.sh; source bp.sh"
alias bold="cd ~/dev/cli/devel; ./getOld.sh download; cd pgedge"
alias ver="vi ~/dev/cli/src/conf/versions.sql"

export DEV=$HOME/dev

## input-output bucket info
export REGION=us-east-2
export BUCKET=s3://pgedge-upstream

## inputs ####################
export IN=$DEV/in
export SOURCE=$IN/sources

export PGB=/opt/pgbin-build
export BLD=$PGB/pgbin/bld
export DOC=$DEV/pgedge

export PGE=$DEV/cli

## output ######################
export OUTPG=$DEV/in/postgres
export OUT=$DEV/out
export HIST=$DEV/history

export DEVEL=$PGE/devel
export PSX=$PGE/out/posix
export PG=$DEVEL/pg
export CLI=$PGE/cli/scripts
export CONT=$CLI/contrib
export REPO=http://localhost:8000
export CONN="-U user1 -P pword1 -d db1"


